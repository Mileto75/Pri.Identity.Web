@model RecordsCreateViewModel

<div class="row">
    <div class="col col-lg-6 mx-auto">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreId"></label>
                <select asp-for="GenreId" asp-items="@Model.Genres" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="ArtistId"></label>
                <select asp-for="ArtistId" asp-items="@Model.Artists" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="PropertyIds"></label>
                <select asp-for="PropertyIds" asp-items="@Model.Properties" class="form-control"></select>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>